function formatTime(timeStr) {
  var result = new Date(timeStr);
  var years = [result.getFullYear(), result.getMonth() + 1, result.getDate()].join('/');
  var times = [result.getHours(), result.getMinutes()].join(':');
  return [years, times].join(' ');
}

