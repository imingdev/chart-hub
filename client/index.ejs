<%
const dayJs = require('dayjs');
const {version} = require('../package.json');
const NODE_ENV = process.env.NODE_ENV;
const isProd = NODE_ENV === 'production';
const TITLE = process.env.TITLE;
const KEYWORDS = process.env.KEYWORDS;
const DESCRIPTION = process.env.DESCRIPTION;
%>
<!DOCTYPE html>
<html>
<head>
    <!-- 构建信息 -->
    <meta
            build-time="<%= dayJs().format('YYYY-MM-DD HH:mm:ss') %>"
            build-env="<%= NODE_ENV %>"
            build-version="<%= version %>"
    >
    <!-- 设置字符集格式 -->
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- 设置网站标题 -->
    <title><%= TITLE %></title>
    <!-- 设置关键字 -->
    <meta name="keywords" content="<%= KEYWORDS %>" data-react-helmet="true"/>
    <!-- 设置描述 -->
    <meta name="description" content="<%= DESCRIPTION %>" data-react-helmet="true"/>
    <!-- 启用360浏览器的极速模式(webkit) -->
    <meta name="renderer" content="webkit">
    <!-- 避免IE使用兼容模式 -->
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <!-- 网页不会被缓存 -->
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="Cache-Control" content="no-cache">
    <meta http-equiv="Expires" content="0">
    <% if(isProd) { %>
        <script type="text/javascript">
          //线上去掉react dev tools
          if ('__REACT_DEVTOOLS_GLOBAL_HOOK__' in window) {
            window.__REACT_DEVTOOLS_GLOBAL_HOOK__.inject = function () {
            };
          }
          if ('__REDUX_DEVTOOLS_EXTENSION_COMPOSE__' in window) {
            window.__REDUX_DEVTOOLS_EXTENSION_COMPOSE__ = function () {
            };
          }
          //解决 https调用 http
          if (/^https/.test(window.location.protocol)) {
            var metaTag = document.createElement("meta");
            metaTag.httpEquiv = "Content-Security-Policy";
            metaTag.content = "upgrade-insecure-requests";
            document.head.appendChild(metaTag);
          }
        </script>
    <% } %>
</head>
<body>
<div id="app-main">
    <style type="text/css">
      @-webkit-keyframes rotate-animation {
        from {
          -webkit-transform: rotate(0deg);
          transform: rotate(0deg);
        }
        to {
          -webkit-transform: rotate(360deg);
          transform: rotate(360deg);
        }
      }

      @keyframes rotate-animation {
        from {
          -webkit-transform: rotate(0deg);
          transform: rotate(0deg);
        }
        to {
          -webkit-transform: rotate(360deg);
          transform: rotate(360deg);
        }
      }

      @-webkit-keyframes circular-animation {
        0% {
          stroke-dasharray: 1, 200;
          stroke-dashoffset: 0;
        }
        50% {
          stroke-dasharray: 90, 150;
          stroke-dashoffset: -40;
        }
        100% {
          stroke-dasharray: 90, 150;
          stroke-dashoffset: -120;
        }
      }

      @keyframes circular-animation {
        0% {
          stroke-dasharray: 1, 200;
          stroke-dashoffset: 0;
        }
        50% {
          stroke-dasharray: 90, 150;
          stroke-dashoffset: -40;
        }
        100% {
          stroke-dasharray: 90, 150;
          stroke-dashoffset: -120;
        }
      }

      .container {
        position: fixed;
        top: 50%;
        left: 50%;
        -webkit-transform: translate(-50%, -50%);
        transform: translate(-50%, -50%);
      }

      .wrapper {
        margin-top: 20px;
        display: -webkit-box;
        display: -ms-flexbox;
        display: flex;
        -webkit-box-align: center;
        -ms-flex-align: center;
        align-items: center;
        -webkit-box-pack: center;
        -ms-flex-pack: center;
        justify-content: center;
        color: #5470c6;
      }

      .logo-image {
        height: 44px;
      }

      .logo-text {
        font-size: 26px;
      }

      .loading {
        margin: auto;
        position: relative;
        width: 40px;
        height: 40px;
        -webkit-animation: rotate-animation 2s linear infinite;
        animation: rotate-animation 2s linear infinite;
      }

      .svg {
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
      }

      .circle {
        stroke: #5470c6;
        stroke-linecap: round;
        stroke-width: 3px;
        -webkit-animation: circular-animation 1.5s ease-in-out infinite;
        animation: circular-animation 1.5s ease-in-out infinite;
      }
    </style>
    <div class="container">
        <div class="loading">
            <svg viewBox="25 25 50 50" class="svg">
                <circle cx="50" cy="50" r="20" fill="none" class="circle"/>
            </svg>
        </div>
        <div class="wrapper">
            <img src="<%= require('client/assets/images/logo.svg') %>" class="logo-image">
            <div class="logo-text">CHART</div>
        </div>
    </div>
</div>
</body>
</html>
